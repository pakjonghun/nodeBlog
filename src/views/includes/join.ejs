<div class="common__container">
  <form id="join__form" class="common__form" method="POST" action="/join">
    <input
      type="text"
      class="common__id"
      placeholder="아이디 3자리 이상, 특수문자 제외"
      required:true
      id="join__id"
    />
    <input
      type="password"
      id="join__password"
      class="common__password"
      placeholder="비밀번호 4자리 이상"
      required:true
    />
    <input
      type="password"
      id="join__password_confirm"
      class="common__password"
      placeholder="비밀번호 확인"
      required:true
    />
    <button class="common__submit">회원가입</button>
  </form>
</div>
